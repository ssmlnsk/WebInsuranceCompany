@page
@model WebInsuranceCompany.Pages.Risks.IndexModel

@{
    ViewData["Title"] = "Риски";
}

<h1>Риски</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Risk[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Risk[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Risk[0].AverageProbability)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Risk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageProbability)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RiskId"><font color="green">Редактировать</font></a> |
                <a asp-page="./Details" asp-route-id="@item.RiskId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.RiskId"><font color="FireBrick">Удалить</font></a>
            </td>
        </tr>
}
    </tbody>
</table>
