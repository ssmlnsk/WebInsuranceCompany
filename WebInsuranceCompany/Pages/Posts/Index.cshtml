@page
@model WebInsuranceCompany.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Должности";
}

<h1>Должности</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Requirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Responsibilities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibilities)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PostId"><font color="green">Редактировать</font></a> 
                <a asp-page="./Details" asp-route-id="@item.PostId">Подробнее</a> 
                <a asp-page="./Delete" asp-route-id="@item.PostId"><font color="FireBrick">Удалить</font></a>
            </td>
        </tr>
}
    </tbody>
</table>
